<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="HomeActivityStyle" parent="AppTheme">
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AlbumDetailActivityStyle" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="ArtistDetailActivityStyle" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="DialogTheme">
        <item name="android:windowEnterAnimation">@anim/dialog_fade_in_overshoot</item>
        <item name="android:windowExitAnimation">@anim/dialog_fade_out_overshoot</item>
    </style>

    <!--<item name="android:fontFamily">@font/roboto_condensed_medium</item>-->
    <!--add an item like above for custom font-->
    <style name="toolbarTitleFont">
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

</resources>
